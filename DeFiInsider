# scripts/protocol_tracking.py

import requests

def fetch_protocol_data(api_url, protocol_name):
    """
    Fetch data from a specific DeFi protocol.
    
    :param api_url: Base URL of the API
    :param protocol_name: Name of the DeFi protocol
    :return: Data from the protocol
    """
    response = requests.get(f'{api_url}/protocols/{protocol_name}')
    response.raise_for_status()
    data = response.json()
    return data

# Example usage:
# protocol_data = fetch_protocol_data('https://api.defi.example.com', 'uniswap')
